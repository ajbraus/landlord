<div class="col-sm-4 col-sm-offset-4">
  <legend>Review Your Landlord</legend>
  <%= form_for [@user, @review] do |f| %>
    <h5><%= @user.first_name.capitalize + " " + @user.last_name.capitalize + ", " + @user.city %></h5>
    <!-- or not -->
    <%= f.label :rating %>:
    <%= f.number_field :rating, class:"form-control", required: true, max: 10, min: 0 %><br />
    <%= f.submit "Save Review", class:"btn btn-primary" %>
  <% end %>
</div>

